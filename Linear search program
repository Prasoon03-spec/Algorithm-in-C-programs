
#include <stdio.h>

int main()
{
    int n, key, found;

    printf("\nEnter the number of elements to be inserted into the array: ");
    scanf("%d", &n);

    int arr[n];

    printf("\nEnter the elements to be inserted into the array: ");
    for(int i=0; i<n; i++)
    {
        scanf("%d", &arr[i]);
    }

    printf("\nThe inputed elements into the array are: ");
    for(int i=0; i<n; i++)
    {
        printf("%d\t", arr[i]);
    }

    printf("\n\nEnter the element which is to be searched: ");
    scanf("%d", &key);

    found = 0;

    for(int i=0; i<n; i++)
    {
        if(key == arr[i])
        {
            printf("\nThe element %d is at %d position within the inputed array\n", key, i+1);
            found++;
        }
    }

    if(found == 0)
    {
        printf("\nThe element %d is not present within the inputed array\n", key);
    }

    return 0;
}

