
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define MAX 2500
#define MIN 1

int main()
{
    int n;
    clock_t start, end;
    double cpu_time_1, cpu_time_2, cpu_time_3;

    printf("\nEnter the total number of the elements you want to generate: ");
    scanf("%d", &n);

    int arr[n];
    int avg[n], best[n], worst[n];

    srand(time(NULL));

    printf("\nThe random array elements are: ");
    for(int i=0; i<n; i++)
    {
        arr[i] = rand()%(MAX - MIN +1) + MIN;
        printf("%d\t", arr[i]);
    }

    for(int i=0; i<n; i++)
    {
        avg[i] = arr[i];
        best[i] = arr[i];
    }

    for(int i=0; i<n-1; i++)
    {
        for(int j=0; j<n-i-1; j++)
        {
            if(best[j] > best[j+1])
            {
                int temp = best[j];
                best[j] = best[j+1];
                best[j+1] = temp;
            }
        }
    }


    printf("\n\nThe sorted array elements are: ");
    for(int i=0; i<n; i++)
    {
        printf("%d\t", best[i]);
    }

    printf("\n\nThe reversed array elements are: ");
    for(int i=0; i<n; i++)
    {
        worst[i] = best[n-i-1];
        printf("%d\t", worst[i]);
    }

    start = clock();

    for(int i=0; i<n-1; i++)
    {
        for(int j=0; j<n-i-1; j++)
        {
            if(best[j] > best[j+1])
            {
                int temp = best[j];
                best[j] = best[j+1];
                best[j+1] = temp;
            }
        }
    }

    end = clock();

    cpu_time_1 = (double)(end - start)/CLOCKS_PER_SEC;

    start = clock();

    for(int i=0; i<n-1; i++)
    {
        for(int j=0; j<n-i-1; j++)
        {
            if(avg[j] > avg[j+1])
            {
                int temp = avg[j];
                avg[j] = avg[j+1];
                avg[j+1] = temp;
            }
        }
    }

    end = clock();

    cpu_time_2 = (double)(end - start)/CLOCKS_PER_SEC;

    start = clock();

    for(int i=0; i<n-1; i++)
    {
        for(int j=0; j<n-i-1; j++)
        {
            if(worst[j] > worst[j+1])
            {
                int temp = worst[j];
                worst[j] = worst[j+1];
                worst[j+1] = temp;
            }
        }
    }

    end = clock();

    cpu_time_3 = (double)(end - start)/CLOCKS_PER_SEC;

    printf("\n\nThe time taken by the CPU for the execution in best case is: %.10f\n", cpu_time_1);

    printf("\nThe time taken by the CPU for the execution in average case is: %.10f\n", cpu_time_2);

    printf("\nThe time taken by the CPU for the execution in worst case is: %.10f\n", cpu_time_3);

    return 0;
}
